<div class="container-signup">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: "Full name", style: "color: #808a8f; margin: 10px 0; width: 100%; max-width: 400px; height: 40px;" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", style: "color: #808a8f; margin: 10px 0; width: 100%; max-width: 400px; height: 40px;" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password - 6 Characters", style: "color: #808a8f; margin: 10px 0; width: 100%; max-width: 400px; height: 40px;" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", style: "color: #808a8f; margin: 10px 0; width: 100%; max-width: 400px; height: 40px;" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "add-category-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
